<mah:MetroWindow x:Class="POSSystem.UI.PrintTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:POSSystem.UI"
        mc:Ignorable="d"
        Title="PrintTestWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Create Document" Command="{Binding CreateDocumentCommand}"/>
            <Button Content="Print Document"  Command="{Binding PrintDocumentCommand}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" x:Name="stackDocumentContainer" Background="Red">
            
        </StackPanel>

    </Grid>
</mah:MetroWindow>
