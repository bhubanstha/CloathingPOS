<UserControl x:Class="POSSystem.UI.Views.SalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:conv="clr-namespace:POSSystem.UI.Converter"
             xmlns:local="clr-namespace:POSSystem.UI.Views"
             xmlns:ctrl="clr-namespace:POSSystem.UI.Controls"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:sc="clr-namespace:POSSystem.UI.Service"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:TotalPriceConverter x:Key="TotalCalc"/>
        <conv:DateConverter x:Key="NepDateConverter"/>
        <conv:ColorToBrushConverter x:Key="ColorConverter"/>

        <Style x:Key="AutoCompleteBox" BasedOn="{StaticResource MahApps.Styles.TextBox}" TargetType="ctrl:AutoCompleteTextBox"></Style>


        <Style x:Key="GridNumericColumn" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        
        <Style x:Key="GridNumericColumnLabel" TargetType="Label">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Padding" Value="0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}}}" Value="True">
                    <Setter Property="Foreground" Value="White" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <Border Style="{StaticResource HeaderBorder}"/>

        <Grid Style="{StaticResource ControlerMainGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0"
                        Grid.Column="0"
                       Grid.ColumnSpan="2"
                       xml:space="preserve">
                        <Bold>Bill No.:</Bold> 123    &#x09;&#x09;&#x09;&#x09;  <Bold>Bill Date: </Bold><Run 
                            Text="{Binding Source={x:Static sys:DateTime.Now}, 
                            Mode=OneWay, 
                            StringFormat='yyyy/mm/dd', 
                            Converter={StaticResource NepDateConverter}}"></Run>
            </TextBlock>
            
            <StackPanel Grid.Row="1" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    

                    <DataGrid x:Name="CartGrid"
                      Grid.Row="1"
                      Grid.Column="0"
                        Grid.ColumnSpan="3"                              
                      AutoGenerateColumns="False"
                      ItemsSource="{Binding Path=CurrentCart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      CanUserAddRows="False"
                      CanUserReorderColumns="False"
                      CanUserSortColumns="False"
                      CanUserResizeColumns="False"
                      IsReadOnly="True"
                      BorderThickness="1"
                      MaxHeight="500"
                      Style="{DynamicResource MahApps.Styles.DataGrid.Azure}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Inventory.Category.Name}" Header="Category" Width="120" />
                            <DataGridTextColumn Binding="{Binding Inventory.Name}" Header="Name" Width="200"/>
                            <DataGridTextColumn Binding="{Binding Inventory.Size}" Header="Size" Width="50"/>
                            <DataGridTemplateColumn Header="Colour" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Rectangle Fill="{Binding Inventory.Color, Converter={StaticResource ColorConverter}}" Width="24" Height="20" VerticalAlignment="Top"></Rectangle>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Binding="{Binding Rate}" Header="Rate" Width="100" ElementStyle="{StaticResource GridNumericColumn}"/>
                            <DataGridTextColumn Binding="{Binding SalesQuantity}" Header="Qty" Width="54" ElementStyle="{StaticResource GridNumericColumn}"/>
                            <DataGridTextColumn Binding="{Binding Discount}" Header="Discount" Width="100" ElementStyle="{StaticResource GridNumericColumn}"/>
                            <DataGridTemplateColumn Header="Total" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Style="{StaticResource GridNumericColumnLabel}">
                                            <Label.Content>
                                                <MultiBinding Converter="{StaticResource TotalCalc}">
                                                    <Binding Path="SalesQuantity"/>
                                                    <Binding Path="Rate"/>
                                                    <Binding Path="Discount"/>
                                                </MultiBinding>
                                            </Label.Content>
                                        </Label>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                        
                    </DataGrid>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1" Margin="5 0 0 0" Height="700" Background="{StaticResource AccentBackground}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" ></StackPanel>
                    <Label Content="Item Name"
                           Grid.Row="1"
                           Grid.Column="0"
                           VerticalAlignment="Center"/>
                    <ctrl:AutoCompleteTextBox x:Name="txtProduct" 
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   Margin="5"
                                   AutoCompletePlacementTarget="{Binding ElementName=txtProduct}"
                                   AutoCompleteWidth="600"
                                   AutoCompleteHeight="150"
                                   AutoCompletePlacement="Bottom"
                                    OnTextChange="Txt_OnProductNameChange"
                                    OnSelectedItemChange="Txt_ProductSelected"
                                           >
                        <ctrl:AutoCompleteTextBox.AutoCompleteColumns>
                            <DataGridTextColumn Header="Id" MinWidth="60" Width="Auto" Binding="{Binding Id}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Product Name" Width="*" Binding="{Binding Name}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Category" Width="*" Binding="{Binding Category.Name}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Size" Width="150" Binding="{Binding Size}"></DataGridTextColumn>
                            <DataGridTemplateColumn Header="Colour">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Rectangle Fill="{Binding Color, Converter={StaticResource ColorConverter}}"></Rectangle>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Price" Width="100" Binding="{Binding RetailRate}"></DataGridTextColumn>
                        </ctrl:AutoCompleteTextBox.AutoCompleteColumns>
                    </ctrl:AutoCompleteTextBox>


                    <Label Content="Rate"
                           Grid.Row="2"
                           Grid.Column="0"
                           VerticalAlignment="Center"/>
                    <mah:NumericUpDown 
                        x:Name="txtRetailRate"
                        Value="{Binding CurrentProduct.Rate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Grid.Row="2"
                             Grid.Column="1"
                             Margin="5"
                             IsEnabled="False"
                                       HideUpDownButtons="True"
                             StringFormat="C"
                                      TextAlignment="Left"
                                       NumericInputMode="Decimal"
                                       Culture="{Binding CultureInfo}"
                             mah:TextBoxHelper.SelectAllOnFocus="True"    
                             Padding="{StaticResource ControlPadding}"
                             Style="{DynamicResource MahApps.Styles.NumericUpDown.DataGrid.Editing}"/>
                    
                    
                    <Label Content="Quantity"
                           Grid.Row="3"
                           Grid.Column="0"
                           VerticalAlignment="Center"/>
                    <mah:NumericUpDown Value="{Binding CurrentProduct.SalesQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Grid.Row="3"
                             Grid.Column="1"
                                       Margin="5"
                                       TextAlignment="Left"
                             mah:TextBoxHelper.SelectAllOnFocus="True"   
                                       Minimum="1"
                             Style="{DynamicResource MahApps.Styles.NumericUpDown.DataGrid.Editing}"/>
                    
                    <Label Content="Discount"
                           Grid.Row="4"
                           Grid.Column="0"
                           VerticalAlignment="Center"/>
                    <mah:NumericUpDown Value="{Binding CurrentProduct.Discount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Grid.Row="4"
                             Grid.Column="1"
                             Margin="5"
                                       TextAlignment="Left"
                                       HideUpDownButtons="True"
                                       StringFormat="C"
                                       NumericInputMode="Decimal"
                                       Culture="{Binding CultureInfo}"
                             mah:TextBoxHelper.SelectAllOnFocus="True"   
                             Style="{DynamicResource MahApps.Styles.NumericUpDown.DataGrid.Editing}"/>

                    <Button
                        Grid.Row="5"
                        Grid.Column="1"
                         Margin="5"
                        Content="Add To Cart"
                        Command="{Binding AddItemToCartCommand}"
                        CommandParameter="{Binding ElementName=CartGrid}"
                        >                        
                    </Button>
                    <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 0 0 5"/>
                </Grid>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
