<UserControl
    x:Class="POSSystem.UI.Views.SalesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:POSSystem.UI.Converter"
    xmlns:ctrl="clr-namespace:POSSystem.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:POSSystem.UI.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sc="clr-namespace:POSSystem.UI.Service"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:TotalPriceConverter x:Key="TotalCalc" />
        <conv:DateConverter x:Key="NepDateConverter" />
        <conv:ColorToBrushConverter x:Key="ColorConverter" />


    </UserControl.Resources>
    <StackPanel>
        <Border Style="{StaticResource HeaderBorder}" />

        <Grid Style="{StaticResource ControlerMainGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="Bill No.:" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Content="{Binding CurrentProduct.Bill.Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <Label
                        Grid.Row="0"
                        Grid.Column="2"
                        Content="Billing Date:" />

                    <Label
                        Grid.Row="0"
                        Grid.Column="3"
                        Content="{Binding CurrentProduct.Bill.BillDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        ContentStringFormat="yyyy/MM/dd" />




                </Grid>


            </StackPanel>

            <!--<TextBlock Grid.Row="0"
                        Grid.Column="0"
                       Grid.ColumnSpan="2"
                       xml:space="preserve">
                        <Bold>Bill No.:</Bold> 123    &#x09;&#x09;&#x09;&#x09;  <Bold>Bill Date: </Bold><Run
                            Text="{Binding Source={x:Static sys:DateTime.Now},
                            Mode=OneWay,
                            StringFormat='yyyy/mm/dd',
                            Converter={StaticResource NepDateConverter}}"></Run>
            </TextBlock>-->

            <StackPanel Grid.Row="1" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>



                    <DataGrid
                        x:Name="CartGrid"
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        MaxHeight="500"
                        AutoGenerateColumns="False"
                        BorderThickness="1"
                        CanUserAddRows="False"
                        CanUserReorderColumns="False"
                        CanUserResizeColumns="False"
                        CanUserSortColumns="False"
                        IsReadOnly="True"
                        ItemsSource="{Binding Path=CurrentCart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{DynamicResource MahApps.Styles.DataGrid.Azure}">

                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="120"
                                Binding="{Binding Inventory.Category.Name}"
                                Header="Category" />
                            <DataGridTextColumn
                                Width="140"
                                Binding="{Binding Inventory.Name}"
                                Header="Name" />
                            <DataGridTextColumn
                                Width="50"
                                Binding="{Binding Inventory.Size}"
                                Header="Size" />
                            <DataGridTemplateColumn Header="Colour">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Rectangle
                                            Width="24"
                                            Height="20"
                                            VerticalAlignment="Top"
                                            Fill="{Binding Inventory.Color, Converter={StaticResource ColorConverter}}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding Rate}"
                                ElementStyle="{StaticResource GridNumericColumn}"
                                Header="Rate" />
                            <DataGridTextColumn
                                Width="54"
                                Binding="{Binding SalesQuantity}"
                                ElementStyle="{StaticResource GridNumericColumn}"
                                Header="Qty" />
                            <DataGridTextColumn
                                Width="100"
                                Binding="{Binding Discount}"
                                ElementStyle="{StaticResource GridNumericColumn}"
                                Header="Discount" />
                            <DataGridTemplateColumn Width="100" Header="Total">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Style="{StaticResource Grid.Numeric.Column}">
                                            <Label.Content>
                                                <MultiBinding Converter="{StaticResource TotalCalc}">
                                                    <Binding Path="SalesQuantity" />
                                                    <Binding Path="Rate" />
                                                    <Binding Path="Discount" />
                                                </MultiBinding>
                                            </Label.Content>
                                        </Label>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="65" Header="Options">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            Grid.Column="1"
                                            Width="25"
                                            Height="25"
                                            Margin="2,0"
                                            Command="{Binding Path=DataContext.DeleteCartItemCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=DataContext}"
                                            Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                            Style="{DynamicResource Button.Circle.In.GridRow}">
                                            <Button.ContentTemplate>
                                                <DataTemplate>
                                                    <iconPacks:PackIconBootstrapIcons
                                                        Width="15"
                                                        Height="15"
                                                        Kind="Trash"
                                                        Style="{StaticResource row.option.icon}" />
                                                </DataTemplate>
                                            </Button.ContentTemplate>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>

                    </DataGrid>
                </Grid>
            </StackPanel>

            <Border
                Grid.Row="1"
                Grid.Column="1"
                Margin="5,0,0,0"
                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                BorderThickness="2">
                <StackPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10" />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Content="Item Name" />
                        <ctrl:AutoCompleteTextBox
                            x:Name="txtProduct"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5"
                            AutoCompleteHeight="200"
                            AutoCompletePlacement="Bottom"
                            AutoCompletePlacementTarget="{Binding ElementName=txtProduct}"
                            AutoCompleteWidth="600"
                            OnSelectedItemChange="Txt_ProductSelected"
                            OnTextChange="Txt_OnProductNameChange">
                            <ctrl:AutoCompleteTextBox.AutoCompleteColumns>
                                <DataGridTextColumn
                                    Width="Auto"
                                    MinWidth="60"
                                    Binding="{Binding Id}"
                                    Header="Id"
                                    Visibility="Hidden" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Category.Name}"
                                    Header="Category" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Name}"
                                    Header="Product Name" />
                                <DataGridTextColumn
                                    Width="150"
                                    Binding="{Binding Size}"
                                    Header="Size" />
                                <DataGridTemplateColumn Header="Colour">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Rectangle
                                                Width="24"
                                                Height="20"
                                                VerticalAlignment="Top"
                                                Fill="{Binding Color, Converter={StaticResource ColorConverter}}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn
                                    Width="100"
                                    Binding="{Binding RetailRate}"
                                    Header="Price" />
                            </ctrl:AutoCompleteTextBox.AutoCompleteColumns>
                        </ctrl:AutoCompleteTextBox>


                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Content="Rate" />
                        <mah:NumericUpDown
                            x:Name="txtRetailRate"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5"
                            Padding="{StaticResource ControlPadding}"
                            mah:TextBoxHelper.SelectAllOnFocus="True"
                            Culture="{Binding CultureInfo}"
                            HideUpDownButtons="True"
                            IsEnabled="False"
                            NumericInputMode="Decimal"
                            StringFormat="C"
                            Style="{DynamicResource MahApps.Styles.NumericUpDown.DataGrid.Editing}"
                            TextAlignment="Left"
                            Value="{Binding CurrentProduct.Rate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


                        <Label
                            Grid.Row="3"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Content="Quantity" />
                        <mah:NumericUpDown
                            x:Name="txtSalesQty"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="5"
                            mah:TextBoxHelper.SelectAllOnFocus="True"
                            Maximum="{Binding CurrentProduct.Inventory.Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Minimum="1"
                            Style="{DynamicResource MahApps.Styles.NumericUpDown.DataGrid.Editing}"
                            TextAlignment="Left"
                            Value="{Binding CurrentProduct.SalesQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Label
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Content="Discount" />
                        <mah:NumericUpDown
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="5"
                            mah:TextBoxHelper.SelectAllOnFocus="True"
                            Culture="{Binding CultureInfo}"
                            HideUpDownButtons="True"
                            NumericInputMode="Decimal"
                            StringFormat="C"
                            Style="{DynamicResource MahApps.Styles.NumericUpDown.DataGrid.Editing}"
                            TextAlignment="Left"
                            Value="{Binding CurrentProduct.Discount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Button
                            Grid.Row="5"
                            Grid.Column="1"
                            Margin="5"
                            Command="{Binding AddItemToCartCommand}"
                            CommandParameter="{Binding ElementName=txtSalesVaT}"
                            Content="Add To Cart"
                            Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}" />
                        <StackPanel
                            Grid.Row="6"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0,5" />
                    </Grid>
                </StackPanel>
            </Border>

            <Grid
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,10,300,0"
                HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".6*" />
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="VAT Amount: " />
                <mah:NumericUpDown
                    x:Name="txtSalesVaT"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,5"
                    Padding="{StaticResource ControlPadding}"
                    VerticalAlignment="Center"
                    mah:TextBoxHelper.SelectAllOnFocus="True"
                    Culture="{Binding CultureInfo}"
                    HideUpDownButtons="True"
                    IsEnabled="False"
                    NumericInputMode="Decimal"
                    StringFormat="C"
                    Style="{DynamicResource MahApps.Styles.NumericUpDown.DataGrid.Editing}"
                    TextAlignment="Left"
                    Value="{Binding CurrentProduct.Bill.VAT, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Grand Total: " />

                <mah:NumericUpDown
                    x:Name="txtSalesTotal"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,5"
                    Padding="{StaticResource ControlPadding}"
                    VerticalAlignment="Center"
                    mah:TextBoxHelper.SelectAllOnFocus="True"
                    Culture="{Binding CultureInfo}"
                    HideUpDownButtons="True"
                    IsEnabled="False"
                    NumericInputMode="Decimal"
                    StringFormat="C"
                    Style="{DynamicResource MahApps.Styles.NumericUpDown.DataGrid.Editing}"
                    TextAlignment="Left"
                    Value="{Binding GrandTotal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Billing To:  " />

                <TextBox
                    x:Name="txtBillingTo"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="{DynamicResource ControlMargin}"
                    Padding="{StaticResource ControlPadding}"
                    VerticalAlignment="Center"
                    mah:TextBoxHelper.ClearTextButton="True"
                    mah:TextBoxHelper.SelectAllOnFocus="True"
                    mah:TextBoxHelper.Watermark="Enter Purchaser Name"
                    Style="{DynamicResource App.TextBox.Validation}"
                    Text="{Binding CurrentProduct.Bill.BillTo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Left" />

                <Button
                    Grid.Row="3"
                    Grid.Column="1"
                    Width="90"
                    Margin="{DynamicResource ControlMargin}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Command="{Binding CheckoutCommand}"
                    Content="Checkout"
                    Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}" />
            </Grid>


        </Grid>
    </StackPanel>
</UserControl>
