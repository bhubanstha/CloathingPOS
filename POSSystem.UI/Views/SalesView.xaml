<UserControl x:Class="POSSystem.UI.Views.SalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:conv="clr-namespace:POSSystem.UI.Converter"
             xmlns:local="clr-namespace:POSSystem.UI.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:TotalPriceConverter x:Key="TotalCalc"/>
        <conv:DateConverter x:Key="NepDateConverter"/>
    </UserControl.Resources>
    <StackPanel>
        <Border Style="{StaticResource HeaderBorder}"/>

        <Grid Style="{StaticResource ControlerMainGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0"
                   Grid.Column="0"
                       xml:space="preserve">
<Bold>Bill No.:</Bold> 123    &#x09;&#x09;&#x09;&#x09;  <Bold>Bill Date: </Bold><Run 
    Text="{Binding Source={x:Static sys:DateTime.Now}, 
                            Mode=OneWay, 
                            StringFormat='yyyy/mm/dd', 
                            Converter={StaticResource NepDateConverter}}"></Run>
            </TextBlock>
            <Border BorderBrush="{DynamicResource MahApps.Brushes.Accent}" BorderThickness="1px" Grid.Row="1" Grid.Column="0" Margin="0 0 10 0">
                <Grid  Style="{StaticResource TabularGrid}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.7*"></ColumnDefinition>
                        <ColumnDefinition Width="5*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label Content="#SN" Grid.Row="0" Grid.Column="0" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Name" Grid.Row="0" Grid.Column="1" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Qty" Grid.Row="0" Grid.Column="2" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Rate" Grid.Row="0" Grid.Column="3" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Total" Grid.Row="0" Grid.Column="4" Style="{StaticResource TabularLabel}"/>


                    <Label Content="1" Grid.Row="1" Grid.Column="0" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Product Name1" Grid.Row="1" Grid.Column="1" Style="{StaticResource TabularLabel}"/>
                    <Label Content="1" Grid.Row="1" Grid.Column="2" Style="{StaticResource TabularLabel}" x:Name="qty"/>
                    <Label Content="200" Grid.Row="1" Grid.Column="3" Style="{StaticResource TabularLabel}" x:Name="rate"/>
                    <Label  Grid.Row="1" Grid.Column="4" Style="{StaticResource TabularLabel}">
                        <Label.Content>
                            <MultiBinding Converter="{StaticResource TotalCalc}">
                                <Binding ElementName="qty" Path="Content"/>
                                <Binding ElementName="rate" Path="Content"/>
                            </MultiBinding>
                        </Label.Content>
                    </Label>

                    <Label Content="#SN" Grid.Row="2" Grid.Column="0" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Name" Grid.Row="2" Grid.Column="1" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Qty" Grid.Row="2" Grid.Column="2" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Rate" Grid.Row="2" Grid.Column="3" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Total" Grid.Row="2" Grid.Column="4" Style="{StaticResource TabularLabel}"/>

                    <Label Content="#SN" Grid.Row="3" Grid.Column="0" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Name" Grid.Row="3" Grid.Column="1" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Qty" Grid.Row="3" Grid.Column="2" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Rate" Grid.Row="3" Grid.Column="3" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Total" Grid.Row="3" Grid.Column="4" Style="{StaticResource TabularLabel}"/>

                    <Label Content="#SN" Grid.Row="4" Grid.Column="0" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Name" Grid.Row="4" Grid.Column="1" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Qty" Grid.Row="4" Grid.Column="2" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Rate" Grid.Row="4" Grid.Column="3" Style="{StaticResource TabularLabel}"/>
                    <Label Content="Total" Grid.Row="4" Grid.Column="4" Style="{StaticResource TabularLabel}"/>
                </Grid>
            </Border>
            <StackPanel Grid.Row="1" Grid.Column="1" Background="{DynamicResource MahApps.Brushes.Accent}">
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
