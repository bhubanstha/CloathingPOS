<UserControl
    x:Class="POSSystem.UI.Views.CreateUserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:POSSystem.UI.Behaviours"
    xmlns:conv="clr-namespace:POSSystem.UI.Converter"
    xmlns:ctrl="clr-namespace:POSSystem.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:POSSystem.UI.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <conv:ControlHeightCalculator x:Key="HeightCalc" />
        <conv:UserDeactivationConverter x:Key="UserDeactivation" />
        <conv:FileToImageSourceConverter x:Key="ImageConverter" />
        <conv:ImageVisibilityConverter x:Key="ImageVisibility" />
        <conv:IconVisibilityConverter x:Key="IconVisibility" />
    </UserControl.Resources>

    <StackPanel>

        <Expander
            Margin="0,5,3,5"
            Header="Create User"
            IsExpanded="True">
            <Grid x:Name="MainGrid" behaviors:KeyboardFocus.On="{Binding ElementName=UserName}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource Label.Validation.Container.Margin}"
                    Text="User Name" />
                <TextBox
                    x:Name="UserName"
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="{StaticResource ControlMargin}"
                    Padding="{StaticResource ControlPadding}"
                    mah:TextBoxHelper.ClearTextButton="True"
                    mah:TextBoxHelper.SelectAllOnFocus="True"
                    mah:TextBoxHelper.Watermark="Enter user name without space and special character [a-z]"
                    SpellCheck.IsEnabled="True"
                    Style="{DynamicResource MahApps.Styles.TextBox}"
                    Text="{Binding NewUser.UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnDataErrors=True, ValidatesOnExceptions=True, NotifyOnTargetUpdated=True}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource Label.Validation.Container.Margin}"
                    Text="Display Name" />
                <TextBox
                    x:Name="DisplayName"
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="{StaticResource ControlMargin}"
                    Padding="{StaticResource ControlPadding}"
                    mah:TextBoxHelper.ClearTextButton="True"
                    mah:TextBoxHelper.SelectAllOnFocus="True"
                    mah:TextBoxHelper.Watermark="Enter person full name (space allowed)"
                    SpellCheck.IsEnabled="True"
                    Style="{DynamicResource MahApps.Styles.TextBox.Button}"
                    Text="{Binding NewUser.DisplayName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Style="{StaticResource Label.Validation.Container.Margin}"
                    Text="Password" />
                <PasswordBox
                    x:Name="txtPassword"
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="{StaticResource ControlMargin}"
                    Padding="{StaticResource ControlPadding}"
                    mah:TextBoxHelper.ClearTextButton="True"
                    mah:TextBoxHelper.SelectAllOnFocus="True"
                    mah:TextBoxHelper.Watermark="Enter simple password"
                    MaxLength="6"
                    Style="{StaticResource MahApps.Styles.PasswordBox.Button.Revealed}" />

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Style="{StaticResource Label.Validation.Container.Margin}"
                    Text="Profile Image" />

                <TextBox
                    x:Name="txtFileName"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="{StaticResource ControlMargin}"
                    Padding="{StaticResource ControlPadding}"
                    IsEnabled="False"
                    Style="{DynamicResource MahApps.Styles.TextBox}"
                    Text="{Binding LogoName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    x:Name="filePicker"
                    Grid.Row="3"
                    Grid.Column="2"
                    Margin="{StaticResource ControlMargin}"
                    Padding="{StaticResource ControlPadding}"
                    mah:TextBoxHelper.ClearTextButton="True"
                    mah:TextBoxHelper.SelectAllOnFocus="True"
                    mah:TextBoxHelper.Watermark="Enter simple password"
                    Command="{Binding FilePickCommand}"
                    Content="Browse..."
                    Style="{DynamicResource Button.FilePicker}" />

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Style="{StaticResource Label.Validation.Container.Margin}"
                    Text="Is Admin" />
                <mah:ToggleSwitch
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="{StaticResource ControlMargin}"
                    ContentPadding="0 0 0 3"
                    IsOn="{Binding NewUser.IsAdmin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    OffContent="No"
                    OnContent="Yes" />

                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Style="{StaticResource Label.Validation.Container.Margin}"
                    Text="For Password Change" />
                <mah:ToggleSwitch
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="{StaticResource ControlMargin}"
                    ContentPadding="0 0 0 3"
                    IsOn="{Binding NewUser.PromptForPasswordReset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    OffContent="No"
                    OnContent="Yes">
                    <!--<mah:ToggleSwitch.Resources>
                    <SolidColorBrush x:Key="MahApps.Brushes.ToggleSwitch.StrokeOff" Color="Red" />
                    <SolidColorBrush x:Key="MahApps.Brushes.ToggleSwitch.StrokeOffPointerOver" Color="DarkRed" />
                    <SolidColorBrush x:Key="MahApps.Brushes.ToggleSwitch.KnobFillOff" Color="White" />
                    <SolidColorBrush x:Key="MahApps.Brushes.ToggleSwitch.KnobFillOnPressed" Color="Red" />
                    <SolidColorBrush x:Key="MahApps.Brushes.ToggleSwitch.KnobFillOffPointerOver" Color="White" />
                    <SolidColorBrush x:Key="MahApps.Brushes.ToggleSwitch.FillOff" Color="Red" />
                    <SolidColorBrush x:Key="MahApps.Brushes.ToggleSwitch.FillOffPointerOver" Color="DarkRed" />

                    <SolidColorBrush x:Key="MahApps.Brushes.ToggleSwitch.FillOn" Color="Green" />
                    <SolidColorBrush x:Key="MahApps.Brushes.ToggleSwitch.FillOnPointerOver" Color="DarkGreen" />

                </mah:ToggleSwitch.Resources>-->
                </mah:ToggleSwitch>





                <Button
                    Grid.Row="7"
                    Grid.Column="1"
                    Width="150"
                    Margin="0,5,0,15"
                    HorizontalAlignment="Left"
                    Command="{Binding CreateUserCommand}"
                    CommandParameter="{Binding ElementName=txtPassword}"
                    Content="{Binding ButtonText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent}" />


                <Button
                    Grid.Row="7"
                    Grid.Column="1"
                    Width="150"
                    Margin="160,5,0,15"
                    HorizontalAlignment="Left"
                    Command="{Binding ResetUserCommand}"
                    CommandParameter="{Binding ElementName=txtPassword}"
                    Content="Reset"
                    Style="{DynamicResource button.Reset}" />



            </Grid>
        </Expander>


        <Expander
            Margin="0,0,3,0"
            Header="User List"
            IsExpanded="False">

            <DataGrid
                x:Name="UserDataGrid"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                AutoGenerateColumns="False"
                BorderThickness="1"
                CanUserAddRows="False"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserSortColumns="False"
                GridLinesVisibility="All"
                HorizontalGridLinesBrush="{DynamicResource MahApps.Brushes.Accent4}"
                IsReadOnly="True"
                ItemsSource="{Binding Path=UsersList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectionMode="Single"
                Style="{DynamicResource MahApps.Styles.DataGrid.Azure}"
                VerticalGridLinesBrush="{DynamicResource MahApps.Brushes.Accent4}">
                <DataGrid.MaxHeight>
                    <MultiBinding
                        Converter="{StaticResource HeightCalc}"
                        Mode="TwoWay"
                        UpdateSourceTrigger="PropertyChanged">
                        <Binding>
                            <Binding.Source>
                                <sys:Double>500</sys:Double>
                            </Binding.Source>
                        </Binding>
                    </MultiBinding>
                </DataGrid.MaxHeight>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="180"
                        Binding="{Binding Id}"
                        Header="UserId"
                        Visibility="Hidden" />
                    <DataGridTextColumn
                        Width="280"
                        Binding="{Binding DisplayName}"
                        Header="Display Name" />
                    <DataGridTextColumn
                        Width="180"
                        Binding="{Binding UserName}"
                        Header="User Name" />
                    <DataGridTemplateColumn Width="70" Header="Is Admin">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <iconPacks:PackIconBootstrapIcons Style="{DynamicResource User.IsAdmin}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="70" Header="Is Active">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <iconPacks:PackIconBootstrapIcons Style="{DynamicResource User.IsActive}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding CreatedDate, StringFormat=\{0:yyyy/MM/dd\}}"
                        ElementStyle="{DynamicResource GridNumericColumn.Center}"
                        Header="Created ON"
                        HeaderStringFormat="yyyy/MM/dd" />
                    <DataGridTemplateColumn Width="100" Header="Profile Image">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Center">
                                    <Ellipse
                                        Width="40"
                                        Height="40"
                                        Stroke="{DynamicResource MahApps.Brushes.Accent}"
                                        Visibility="{Binding ProfileImage, Converter={StaticResource ImageVisibility}}">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding ProfileImage, Converter={StaticResource ImageConverter}}" />
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <iconPacks:PackIconFontAwesome
                                        x:Name="icnUserImage"
                                        Width="22"
                                        Height="22"
                                        VerticalAlignment="Center"
                                        Kind="UserAltSolid"
                                        Visibility="{Binding ProfileImage, Converter={StaticResource IconVisibility}}" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding DeactivationDate, StringFormat=\{0:yyyy/MM/dd\}}"
                        ElementStyle="{DynamicResource GridNumericColumn.Center}"
                        Header="Deactivated ON"
                        HeaderStringFormat="yyyy/MM/dd" />

                    <DataGridTemplateColumn Width="*" Header="Options">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30" />
                                        <ColumnDefinition Width="30" />
                                        <ColumnDefinition Width="30" />
                                    </Grid.ColumnDefinitions>

                                    <Button
                                        Grid.Column="0"
                                        Width="25"
                                        Height="25"
                                        Command="{Binding Path=DataContext.ChangeUserPasswordCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=DataContext}"
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        ToolTip="Change User Password">

                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <iconPacks:PackIconBootstrapIcons
                                                    Width="15"
                                                    Height="15"
                                                    Kind="KeyFill"
                                                    Style="{StaticResource row.option.icon}" />
                                            </DataTemplate>
                                        </Button.ContentTemplate>

                                        <Button.Style>
                                            <Style BasedOn="{StaticResource Button.Circle.In.GridRow}" TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DeactivationDate, Converter={StaticResource UserDeactivation}}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button
                                        Grid.Column="1"
                                        Width="25"
                                        Height="25"
                                        Command="{Binding Path=DataContext.EditUserCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=DataContext}"
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        ToolTip="Edit User">

                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <iconPacks:PackIconBootstrapIcons
                                                    Width="15"
                                                    Height="15"
                                                    Kind="PencilSquare"
                                                    Style="{StaticResource row.option.icon}" />
                                            </DataTemplate>
                                        </Button.ContentTemplate>

                                        <Button.Style>
                                            <Style BasedOn="{StaticResource Button.Circle.In.GridRow}" TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DeactivationDate, Converter={StaticResource UserDeactivation}}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button
                                        Grid.Column="2"
                                        Width="25"
                                        Height="25"
                                        Command="{Binding Path=DataContext.DeleteUserCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=DataContext}"
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        ToolTip="Deactivate User">

                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <iconPacks:PackIconBootstrapIcons
                                                    Width="15"
                                                    Height="15"
                                                    Kind="Lock"
                                                    Style="{StaticResource row.option.icon}" />
                                            </DataTemplate>
                                        </Button.ContentTemplate>

                                        <Button.Style>
                                            <Style BasedOn="{StaticResource Button.Circle.In.GridRow}" TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DeactivationDate, Converter={StaticResource UserDeactivation}}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button
                                        Grid.Column="1"
                                        Width="25"
                                        Height="25"
                                        Command="{Binding Path=DataContext.RestoreUserCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=DataContext}"
                                        Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                        ToolTip="Reactivate User">

                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <iconPacks:PackIconBootstrapIcons
                                                    Width="15"
                                                    Height="15"
                                                    Kind="Unlock"
                                                    Style="{StaticResource row.option.icon}" />
                                            </DataTemplate>
                                        </Button.ContentTemplate>

                                        <Button.Style>
                                            <Style BasedOn="{StaticResource Button.Circle.In.GridRow}" TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DeactivationDate, Converter={StaticResource UserDeactivation}}" Value="False">
                                                        <Setter Property="Visibility" Value="Hidden" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                </Grid>

                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>

            </DataGrid>

        </Expander>
    </StackPanel>

</UserControl>
