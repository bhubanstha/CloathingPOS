<UserControl x:Class="POSSystem.UI.Views.CreateUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POSSystem.UI.Views"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:behaviors="clr-namespace:POSSystem.UI.Behaviours"
             xmlns:ctrl="clr-namespace:POSSystem.UI.Controls"
             mc:Ignorable="d" 

             d:DesignHeight="450" d:DesignWidth="800">

    
    <StackPanel>
        <Border BorderThickness="2px" BorderBrush="{DynamicResource MahApps.Brushes.Accent}" >
        </Border>
        <Grid Margin="0 30 30 0" x:Name="MainGrid" behaviors:KeyboardFocus.On="{Binding ElementName=UserName}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Text="User Name"
                   Grid.Row="0"
                   Grid.Column="0"
                   Margin="10 5 0 5"
                   />
            <TextBox x:Name="UserName"
                     Text="{Binding UserName}"
                     Grid.Row="0"
                     Grid.Column="1"
                     mah:TextBoxHelper.ClearTextButton="True"
                     mah:TextBoxHelper.SelectAllOnFocus="True"    
                     mah:TextBoxHelper.Watermark="Enter user name without space and special character [a-z]"
                     SpellCheck.IsEnabled="True"
                     Margin="{StaticResource ControlMargin}"
                     Padding="{StaticResource ControlPadding}"
                     Style="{DynamicResource MahApps.Styles.TextBox.Button}">               
            </TextBox>

            <TextBlock Text="Display Name"
                   Grid.Row="1"
                   Grid.Column="0"
                   Margin="10 5 0 5"
                   />
            <TextBox x:Name="DisplayName"
                     Text="{Binding DisplayName}"
                     Grid.Row="1"
                     Grid.Column="1"
                    
                 mah:TextBoxHelper.ClearTextButton="True"
                     mah:TextBoxHelper.SelectAllOnFocus="True"    
                     mah:TextBoxHelper.Watermark="Enter person full name (space allowed)"
                     SpellCheck.IsEnabled="True"
                     Margin="{StaticResource ControlMargin}"
                     Padding="{StaticResource ControlPadding}"
                     Style="{DynamicResource MahApps.Styles.TextBox.Button}">
                
            </TextBox>

            <TextBlock Text="Password"
                   Grid.Row="2"
                   Grid.Column="0"
                   Margin="10 5 0 5"
                   />
            <PasswordBox x:Name="Password"
                 Grid.Row="2"
                 Grid.Column="1"
                 mah:TextBoxHelper.ClearTextButton="True"
                     mah:TextBoxHelper.SelectAllOnFocus="True"    
                     mah:TextBoxHelper.Watermark="Enter simple password"
                         MaxLength="6"
                     Margin="{StaticResource ControlMargin}"
                     Padding="{StaticResource ControlPadding}"
                     Style="{StaticResource MahApps.Styles.PasswordBox.Button.Revealed}"/>

            <TextBlock Text="Is Admin"
                   Grid.Row="3"
                   Grid.Column="0"
                   Margin="10 5 0 5"
                   />
            <mah:ToggleSwitch Margin="{StaticResource ControlMargin}"
                              OffContent="No"
                              OnContent="Yes"
                              Grid.Row="3"
                              Grid.Column="1"
                              ContentPadding="0 0 0 3"
                              IsOn="{Binding IsAdmin}"
                              />

            <TextBlock Text="For Password Change"
                   Grid.Row="4"
                   Grid.Column="0"
                   Margin="10 5 0 5"
                   />
            <mah:ToggleSwitch Margin="{StaticResource ControlMargin}"
                              OffContent="No"
                              OnContent="Yes"
                              Grid.Row="4"
                              Grid.Column="1"
                              ContentPadding="0 0 0 3"
                              IsOn="{Binding PromptForPasswordReset}"/>

            
            <!--<TextBlock Text="Auto Compolete Text"
                   Grid.Row="4"
                   Grid.Column="0"
                   Margin="10 5 0 5"
                   />-->

            <ctrl:AutoCompleteTextBox x:Name="txt" 
                                   AutoCompleteWidth="{Binding ElementName=txt, Path=ActualWidth}"
                                   AutoCompleteHeight="150"
                                   AutoCompletePlacementTarget="{Binding ElementName=txt}"
                                   AutoCompletePlacement="Bottom"
                                   Grid.Row="7"
                                   Grid.Column="1"
                                   >
                <ctrl:AutoCompleteTextBox.AutoCompleteColumns>
                    <DataGridTextColumn Header="Id" MinWidth="60" Width="Auto" Binding="{Binding EmployeeId}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Full Name" Width="*" Binding="{Binding FullName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Contact" Width="150" Binding="{Binding Contact}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Salary" Width="100" Binding="{Binding Salary}"></DataGridTextColumn>
                </ctrl:AutoCompleteTextBox.AutoCompleteColumns>
            </ctrl:AutoCompleteTextBox>

           
            <Button Content="Create Account"
                    Grid.Row="6"
                    Grid.Column="1"
                    Width="150"
                    Margin="0 5 0 5"
                    HorizontalAlignment="Left"
                    Command="{Binding CreateUserCommand}"
                    CommandParameter="{Binding ElementName=Password}"
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}" >
            </Button>
                    
                    
        </Grid>
    </StackPanel>

</UserControl>
