<UserControl x:Class="POSSystem.UI.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:POSSystem.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Border Style="{StaticResource HeaderBorder }" />

        <Grid Style="{StaticResource ControlerMainGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Category"
                   Grid.Row="0"
                   Grid.Column="0"
                   Margin="0 5 0 5"
                   />
            <ComboBox x:Name="Category"
                        Text="{Binding Categories}"
                        Grid.Row="0"
                        Grid.Column="1"
                        mah:TextBoxHelper.ClearTextButton="True"
                        mah:TextBoxHelper.SelectAllOnFocus="True"    
                        Margin="{StaticResource ControlMargin}"
                        Padding="{StaticResource ControlPadding}"/>

            <TextBlock Text="Product Name"
                   Grid.Row="1"
                   Grid.Column="0"
                   Margin="0 5 0 5"
                   />
            <TextBox x:Name="ProductName"
                        Text="{Binding ProductName}"
                        Grid.Row="1"
                        Grid.Column="1"
                        mah:TextBoxHelper.ClearTextButton="True"
                        mah:TextBoxHelper.SelectAllOnFocus="True"    
                        mah:TextBoxHelper.Watermark="Some Watermark"
                        SpellCheck.IsEnabled="True"
                        Margin="{StaticResource ControlMargin}"
                        Padding="{StaticResource ControlPadding}"
                        Style="{DynamicResource MahApps.Styles.TextBox.Button}"/>

            <TextBlock Text="Size"
                   Grid.Row="2"
                   Grid.Column="0"
                   Margin="0 5 0 5"
                   />
            <TextBox x:Name="Size"
                 Text="{Binding Size}"
                 Grid.Row="2"
                 Grid.Column="1"
                  mah:TextBoxHelper.ClearTextButton="True"
                     mah:TextBoxHelper.SelectAllOnFocus="True"    
                     mah:TextBoxHelper.Watermark="Some Watermark"
                     SpellCheck.IsEnabled="True"
                     Margin="{StaticResource ControlMargin}"
                     Padding="{StaticResource ControlPadding}"
                     Style="{DynamicResource MahApps.Styles.TextBox.Button}"/>

            <TextBlock Text="Colour"
                   Grid.Row="3"
                   Grid.Column="0"
                   Margin="0 5 0 5"
                   />
            <TextBox x:Name="Colour"
                 Text="{Binding Colour}"
                 Grid.Row="3"
                 Grid.Column="1"
                   mah:TextBoxHelper.ClearTextButton="True"
                     mah:TextBoxHelper.SelectAllOnFocus="True"    
                     mah:TextBoxHelper.Watermark="Some Watermark"
                     SpellCheck.IsEnabled="True"
                     Margin="{StaticResource ControlMargin}"
                     Padding="{StaticResource ControlPadding}"
                     Style="{DynamicResource MahApps.Styles.TextBox.Button}"/>

            <TextBlock Text="Quantity"
                   Grid.Row="4"
                   Grid.Column="0"
                   Margin="0 5 0 5"
                   />
            <TextBox x:Name="Quantity"
                 Text="{Binding Quantity}"
                 Grid.Row="4"
                 Grid.Column="1"
                   mah:TextBoxHelper.ClearTextButton="True"
                     mah:TextBoxHelper.SelectAllOnFocus="True"    
                     mah:TextBoxHelper.Watermark="Some Watermark"
                     SpellCheck.IsEnabled="True"
                     Margin="{StaticResource ControlMargin}"
                     Padding="{StaticResource ControlPadding}"
                     Style="{DynamicResource MahApps.Styles.TextBox.Button}"/>

            <TextBlock Text="Rate"
                   Grid.Row="5"
                   Grid.Column="0"
                   Margin="0 5 0 5"
                   />
            <TextBox x:Name="Rate"
                 Text="{Binding Rate}"
                 Grid.Row="5"
                 Grid.Column="1"
                   mah:TextBoxHelper.ClearTextButton="True"
                     mah:TextBoxHelper.SelectAllOnFocus="True"    
                     mah:TextBoxHelper.Watermark="Some Watermark"
                     SpellCheck.IsEnabled="True"
                     Margin="{StaticResource ControlMargin}"
                     Padding="{StaticResource ControlPadding}"
                     Style="{DynamicResource MahApps.Styles.TextBox.Button}"/>

            <TextBlock Text="Purchase Date"
                   Grid.Row="6"
                   Grid.Column="0"
                   Margin="0 5 0 5"
                   />
            <DatePicker x:Name="PurchaseDate"
                 Text="{Binding PurchaseDate}"
                 Grid.Row="6"
                 Grid.Column="1"
                        IsTodayHighlighted="True"
                     mah:TextBoxHelper.SelectAllOnFocus="True"    
                     mah:TextBoxHelper.Watermark="Some Watermark"
                     Margin="{StaticResource ControlMargin}"
                     Padding="{StaticResource ControlPadding}"
                        CalendarStyle="{StaticResource resizedCalendarItem}">
            </DatePicker>


            <Button Content="Create Inventory"
                    Grid.Row="7"
                    Grid.Column="1"
                    Width="150"
                    Margin="0 5 0 5"
                    HorizontalAlignment="Left"
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}">
            </Button>


        </Grid>
    </StackPanel>

</UserControl>
